<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ac.anan_nct.pokereg"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FlickSettingsActivity"
            android:label="@string/title_activity_flick_settings" >
        </activity>
        <activity
            android:name=".FlickSettingActivity"
            android:label="@string/title_activity_flick_setting" >
        </activity>
        <activity
            android:name=".EditFlickActivity"
            android:label="@string/title_activity_edit_flick" >
        </activity>
        <activity
            android:name=".AddNewFlickActivity"
            android:label="@string/title_activity_add_new_flick" >
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name=".ReceiptsActivity"
            android:label="@string/title_activity_receipts" >
        </activity>
        <activity
            android:name=".ReceiptDetailActivity"
            android:label="@string/title_activity_receipt_detail" >
        </activity>
        <activity
            android:name=".CaptureReceiptActivity"
            android:label="@string/title_activity_capture_receipt" >
        </activity>
        <activity
            android:name=".ShowImageActivity"
            android:label="@string/title_activity_show_image" >
        </activity>
    </application>

</manifest>
